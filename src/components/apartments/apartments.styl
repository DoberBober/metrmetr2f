.table__item
	position relative
	display grid
	grid-template-columns repeat(11, minmax(min-content, 1fr))
	grid-template-columns 1fr 70px 70px 110px 110px 110px 70px 1fr 130px 130px 130px

	&:hover
		background-color #E5E5E5

		&::before
			content ''
			position absolute
			left 0
			top 0
			width 100vw
			height 100%
			margin-left calc(0px + (100vw - 100%) / -2)
			background #E5E5E5
			z-index -1

	&:focus-within
		background-color #E5E5E5

		&::before
			content ''
			position absolute
			left 0
			top 0
			width 100vw
			height 100%
			margin-left calc(0px + (100vw - 100%) / -2)
			background #E5E5E5
			z-index -1

.table__item--head
	position sticky
	top 0
	background #eee

	&::before
		content ''
		position absolute
		left 0
		top 0
		width 100vw
		height 100%
		margin-left calc(0px + (100vw - 100%) / -2)
		background #eee
		z-index -1


.table__cell
	padding 10px 5px
	font-size 14px
	white-space nowrap
	color #000

	a
		color #000
		text-decoration none
		box-shadow inset 0 -1px 0 0 #777
		transition .25s

		&:hover, &:focus
			outline none
			box-shadow inset 0 -17px 0 0 #777
			color #fff

.table__cell--legend
	white-space initial

.table__cell--options
	svg
		margin-right 10px
