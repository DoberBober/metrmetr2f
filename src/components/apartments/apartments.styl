.table__item
	position relative
	// We need subgrids!
	display grid
	grid-template-columns repeat(12, minmax(min-content, 1fr))
	grid-template-columns 1fr 70px 70px 70px 110px 110px 110px 70px 1fr 130px 130px 130px
	padding 5px 0 0 15px

.table__item--main
	padding-left 20px

.table__item--hidden
	display none

.table__item--main + .table__item:not(.table__item--main),
.table__item:not(.table__item--main) + .table__item:not(.table__item--main)
	box-shadow inset 5px 0 0 0 #ccc

.table__item--spoiler
	&::after
		content ''
		background url('./down.svg') center center no-repeat
		background-size 100%
		position absolute
		width 10px
		height 8px
		left 5px
		top 18px
		transform rotate(-90deg)
		transform-origin center center
		transition .25s

	&:hover::after
		transform rotate(-45deg)

.table__item--open
	&::after
		transform rotate(0deg)

// .table__item--open, .table__item--visible
// 	background-color #eee

.table__item:not(.table__item--head)
	&:hover
		background-color #E5E5E5

		&::before
			content ''
			position absolute
			left 0
			top 0
			width 100vw
			height 100%
			margin-left calc((100vw - 100%) / -2)
			background #E5E5E5
			z-index -1

	&:focus-within
		background-color #E5E5E5

		&::before
			content ''
			position absolute
			left 0
			top 0
			width 100vw
			height 100%
			margin-left calc((100vw - 100%) / -2)
			background #E5E5E5
			z-index -1

.table__item--head
	position sticky
	top 0
	z-index 1
	background #eee

	&::before
		content ''
		position absolute
		left 0
		top 0
		width 100vw
		height 100%
		margin-left calc((100vw - 100%) / -2)
		background #eee
		z-index -1


.table__cell
	padding 10px 5px
	font-size 14px
	white-space nowrap
	color #000

	a
		color #000
		text-decoration none
		box-shadow inset 0 -1px 0 0 #777
		transition .25s

		&:hover, &:focus
			outline none
			box-shadow inset 0 -17px 0 0 #777
			color #fff

.table__cell--legend
	white-space initial

.table__cell--options
	svg
		margin-right 10px
