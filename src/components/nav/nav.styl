.mainHeader
	background-color #EEE
	padding-top 30px
	padding-bottom 30px

.mainHeader__container
	display flex

.filter
	display flex
	justify-content space-between

.form__section + .form__section
	margin-left 30px

.form__group
	display flex

.form__group--rooms
	flex-wrap wrap

.logo
	width 345px
	margin-right 60px

.logo__link
	display table
	margin-bottom 10px

.logo__text
	margin 0
	font-size 14px
	color #000

	a
		color inherit
		text-decoration none
		box-shadow inset 0 -1px 0 0 #777
		transition .25s

		&:hover, &:focus
			outline none
			box-shadow inset 0 -16px 0 0 #777
			color #fff

.logo__text--secondary
	margin-top 5px
	color #777

.form__input
	font-size 14px
	border 1px solid #E5E5E5
	padding 11px 16px
	background-color #fff
	transition .25s

.form__input--price
	-webkit-appearance none
	-moz-appearance textfield
	appearance none
	width 95px

.form__input--price::-webkit-outer-spin-button,
.form__input--price::-webkit-inner-spin-button
	-webkit-appearance none
	appearance none
	margin 0

.form__input--select
	width 100%
	-webkit-appearance none
	appearance none
	padding-right 26px
	background-image url('./down.svg')
	background-position right 10px center
	background-repeat no-repeat
	background-size 10px 8px

.form__input:only-of-type
	border-radius 3px

.form__input:not(:only-of-type):first-of-type
	border-top-left-radius 3px
	border-bottom-left-radius 3px

.form__input:not(:only-of-type):last-of-type
	border-top-right-radius 3px
	border-bottom-right-radius 3px

.form__checkbox:checked + .form__input
	background-color #E5E5E5

.form__checkbox:focus + .form__input
	background-color #ccc
	border-color #ccc

.form__label
	display table
	margin 0 0 5px
	font-size 14px
	white-space nowrap
	color #777

.form__submit
	margin-left auto
	background none
	border 1px solid #ccc
	padding 0 32px
	transition .25s

	&:hover, &:focus
		outline none
		background #ccc
		color #fff
